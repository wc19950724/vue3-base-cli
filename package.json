{
  "name": "vue3-base-cli",
  "version": "1.0.10",
  "description": "vue3-base 项目脚手架安装工具",
  "main": "lib/cli.js",
  "bin": {
    "vue3-base": "bin/cli"
  },
  "scripts": {
    "start": "node lib/cli.js",
    "build": "pnpm fix && rollup -c",
    "fix": "pnpm prettier && tsc && pnpm lint",
    "lint": "eslint **/*.{js,cjs,mjs,ts,cts,mts} --fix",
    "prettier": "prettier --ignore-path .eslintignore **/*.{js,cjs,mjs,ts,cts,mts} --write",
    "release": "release-cli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wc19950724/vue3-base-cli.git"
  },
  "keywords": [
    "vue3",
    "ts",
    "typescript",
    "tdesign",
    "tdesign-vue-next"
  ],
  "author": "948533798@qq.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wc19950724/vue3-base-cli/issues"
  },
  "homepage": "https://github.com/wc19950724/vue3-base-cli#readme",
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^18.15.11",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/parser": "^5.59.0",
    "chalk-cjs": "^5.2.0",
    "commander": "^10.0.1",
    "enquirer": "^2.3.6",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "execa": "^7.1.1",
    "ghooks": "^2.0.4",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "release-base-cli": "0.0.1-rc.8",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.0",
    "semver": "^7.5.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts}": [
      "pnpm fix"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged --quiet --concurrent false"
    }
  }
}
