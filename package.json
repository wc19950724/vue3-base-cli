{
  "name": "vue3-base-cli",
  "version": "1.0.7",
  "description": "vue3-base 项目脚手架安装工具",
  "keywords": [
    "vue3",
    "ts",
    "typescript",
    "tdesign",
    "tdesign-vue-next"
  ],
  "license": "MIT",
  "author": "948533798@qq.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/wc19950724/vue3-base-cli.git"
  },
  "bugs": {
    "url": "https://github.com/wc19950724/vue3-base-cli/issues"
  },
  "main": "lib/cli.js",
  "scripts": {
    "build": "rimraf lib && yarn fix && rollup -c",
    "lint": "eslint **/*.{js,cjs,mjs,ts,cts,mts} --fix",
    "prettier": "prettier --ignore-path .eslintignore **/*.{js,cjs,mjs,ts,cts,mts} --loglevel warn --write",
    "fix": "yarn prettier && tsc && yarn lint",
    "release": "rollup -c rollup.scripts.mjs && node scripts/release.cjs",
    "changelog": "standard-changelog -i CHANGELOG.md -s -r 0"
  },
  "bin": {
    "vue3-base": "bin/cli"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.11",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/parser": "^5.59.0",
    "chalk": "^4.1.2",
    "commander": "^10.0.1",
    "enquirer": "^2.3.6",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "execa": "^7.1.1",
    "ghooks": "^2.0.4",
    "lint-staged": "^13.2.1",
    "minimist": "^1.2.8",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "rollup": "^3.20.6",
    "rollup-plugin-node-externals": "^5.1.2",
    "semver": "^7.5.0",
    "standard-changelog": "^2.0.27",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts}": [
      "yarn fix"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged --quiet --concurrent false"
    }
  }
}
